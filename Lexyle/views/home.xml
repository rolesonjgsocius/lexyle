        // Function to remove active class from all links
        function removeActiveClass() {
            links.forEach(link => link.classList.remove("linkactive"));
        }

        // Show the first section by default and mark the first link as active
        hideAllSections();
        document.querySelector("#Features").style.display = "grid";
        links[0].classList.add("linkactive");

        // Add click event to each link
        links.forEach(link => {
            link.addEventListener("click", function (e) {
                e.preventDefault();

                // Hide all sections
                hideAllSections();

                // Remove active class from all links
                removeActiveClass();

                // Get the target section ID
                const targetId = this.getAttribute("href").substring(1);
                const targetSection = document.getElementById(targetId);

                // Show the target section if it exists
                if (targetSection) {
                    targetSection.style.display = "grid";
                }

                // Add active class to the clicked link
                this.classList.add("linkactive");
            });
        });
    });
</script>

