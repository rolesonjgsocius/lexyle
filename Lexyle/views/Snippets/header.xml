                    <script>
                        function toggleMenu() {
                        const header = document.querySelector('.headerdiv');
                        const toggleButton = document.querySelector('.toggle-button');

                        if (header.classList.contains('active')) {
                        closeMenu();
                        } else {
                        openMenu();
                        }
                        }

                        function closeMenu() {
                        const header = document.querySelector('.headerdiv');
                        const toggleButton = document.querySelector('.toggle-button');

                        if (header.classList.contains('active')) {
                        header.classList.add('closing');
                        setTimeout(() => {
                        header.classList.remove('active', 'closing');
                        toggleButton.textContent = 'â˜°';
                        }, 300); // adjust to match transition
                        }
                        }

                        function openMenu() {
                        const header = document.querySelector('.headerdiv');
                        const toggleButton = document.querySelector('.toggle-button');

                        header.classList.remove('closing');
                        header.classList.add('active');
                        toggleButton.textContent = 'X';
                        }

                        // Close the menu when any .close_on_click link is clicked (only on screen > 760px)
                        document.addEventListener('DOMContentLoaded', () => {
                        const closers = document.querySelectorAll('.close_on_click');
                        closers.forEach(link => {
                        link.addEventListener('click', () => {
                        if (window.innerWidth &lt; 760) {
                        closeMenu();
                        }
                        });
                        });
                        });
                    </script>


