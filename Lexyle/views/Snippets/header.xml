                    <script>
                        document.addEventListener("DOMContentLoaded", function () {

                        const link = document.getElementById("toFeatures_homepage");

                        if (link) {
                        link.addEventListener("click", function (event) {
                        event.preventDefault(); // Prevent default anchor behavior

                        const targetSection = "#Features_homepage";
                        const isHomepage = window.location.pathname === "/";

                        if (isHomepage) {
                        // Smooth scroll if already on the homepage
                        document.querySelector(targetSection)?.scrollIntoView({ behavior: "smooth", block: 'start' });
                        } else {
                        // Redirect to homepage and scroll after loading
                        window.location.href = "/" + targetSection;
                        }
                        });
                        }

                        // If the URL contains a hash, scroll to it on page load
                        if (window.location.hash) {
                        document.querySelector(window.location.hash)?.scrollIntoView({ behavior: "smooth", block:
                        'start' });
                        }
                        });

                        // Smooth navigation for AI page sections
                        document.addEventListener("DOMContentLoaded", function () {
                        function handleNavigation(event, targetId) {
                        event.preventDefault(); // Prevent default anchor behavior
                        const currentPath = window.location.pathname;

                        if (currentPath === "/ai") {
                        // If already on /ai, just scroll to the section
                        document.getElementById(targetId)?.scrollIntoView({ behavior: "smooth", block: 'start' });
                        } else {
                        // Redirect to AI page and scroll after loading
                        sessionStorage.setItem("scrollToSection", targetId); // Store target section
                        window.location.href = "/ai#" + targetId;
                        }
                        }

                        // Add click listeners safely
                        document.getElementById("assessmentlink")?.addEventListener("click", function (event) {
                        handleNavigation(event, "assessments");
                        });

                        document.getElementById("questionbanklink")?.addEventListener("click", function (event) {
                        handleNavigation(event, "instantquestionbank");
                        });
                        document.getElementById("DOAgrilink")?.addEventListener("click", function (event) {
                        handleNavigation(event, "doagriai_container");
                        });


                        // On AI page, check for hash in URL and scroll to it
                        if (window.location.pathname === "/ai") {
                        const storedSection = sessionStorage.getItem("scrollToSection");
                        const sectionId = window.location.hash ? window.location.hash.substring(1) : storedSection;

                        if (sectionId) {
                        setTimeout(() => {
                        document.getElementById(sectionId)?.scrollIntoView({ behavior: "smooth", block: 'start' });
                        sessionStorage.removeItem("scrollToSection"); // Clear stored section
                        }, 500); // Small delay to ensure the element is loaded
                        }
                        }
                        });

                    </script>
