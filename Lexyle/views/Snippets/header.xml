                    <script>
                        document.addEventListener("DOMContentLoaded", function () {
                        const navigateButtons = document.querySelectorAll("#navigatetoget_in_touch_id, #linktoredirectproprly");
                        const targetSection = "inputcustom_crm"; // Target section ID

                        function scrollToSection(id) {
                        const targetElement = document.getElementById(id);
                        if (targetElement) {
                        console.log("Applying smooth offset...");
                        const yOffset = 500; // Offset moves the element up
                        const y = targetElement.getBoundingClientRect().top + window.scrollY + yOffset;
                        console.log("Original position:", targetElement.getBoundingClientRect().top + window.scrollY);
                        console.log("Adjusted position:", y);
                        window.scrollTo({ top: y, behavior: "smooth" });
                        } else {
                        console.log("Target element not found:", id);
                        }
                        }

                        navigateButtons.forEach(button => {
                        button.addEventListener("click", function (event) {
                        event.preventDefault(); // Prevent default navigation
                        console.log("Button clicked, current path:", window.location.pathname);

                        const currentPath = window.location.pathname;
                        if (!["/", "/ai"].includes(currentPath)) {
                        // Redirect from other pages with sessionStorage
                        console.log("Redirecting to homepage with target:", targetSection);
                        sessionStorage.setItem("scrollToSection", targetSection);
                        window.location.href = "/#" + targetSection; // Redirect with hash
                        } else {
                        // On "/" or "/ai", use hash jump + offset
                        console.log("On homepage or AI page, scrolling to:", targetSection);
                        window.location.href = "#" + targetSection; // Trigger browser jump
                        setTimeout(() => scrollToSection(targetSection), 50); // Apply offset
                        }
                        });
                        });

                        // Handle scroll on page load (for redirects from other pages)
                        window.addEventListener("load", function () {
                        const storedSection = sessionStorage.getItem("scrollToSection");
                        const hashSection = window.location.hash.substring(1); // Remove "#"

                        console.log("Page loaded, storedSection:", storedSection, "hashSection:", hashSection);

                        const sectionToScroll = storedSection || hashSection;
                        if (sectionToScroll === targetSection &amp;&amp; window.location.pathname === "/") {
                        console.log("Scrolling to:", sectionToScroll);
                        scrollToSection(sectionToScroll);
                        if (storedSection) {
                        sessionStorage.removeItem("scrollToSection"); // Clean up
                        history.replaceState(null, "", window.location.pathname); // Clean URL
                        }
                        }
                        });
                        });
                    </script>

