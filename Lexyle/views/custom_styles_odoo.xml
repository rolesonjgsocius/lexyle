<template inherit_id="web.frontend_layout" id="footercopyrightscustom">
<xpath expr="//div[contains(@class, 'col-sm') and contains(@class, 'text-center') and contains(@class, 'text-sm-start') and contains(@class, 'text-muted')]" position="replace">
    <div style="display: flex;
  justify-content: space-between;
  margin: auto;
  padding: 0px;" class="col-12 col-md-12 col-lg-12 col-xl-12 col-xs-12 text-center text-sm-start text-muted  d-flex flex-column flex-md-row">

        <span class="o_footer_copyright_name me-2">
            Copyright &amp;copy; <span>Lexyle</span>
        </span>
                <span style="  " class="o_footer_copyright_name me-2">
           <a style="color: rgba(255, 255, 255, 0.7) !important;" href="/termsandconditions">Terms and Conditions</a>
        </span>
    </div>
</xpath>
</template>
